<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#2980b9"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:paddingBottom="60dp"
        android:paddingTop="60dp"
        android:text="Đồ Án LTHT - Vi Điều Khiển"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/D01"
        android:layout_marginBottom="-104dp"
        android:text="LIGHT:"
        android:textColor="@color/red"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:text="FAN:"
        android:textColor="@color/red"
        android:layout_alignLeft="@+id/D02" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@+id/D01"
        android:text="MOTOR:"
        android:textColor="@color/red"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:text="KETTLES:"
        android:textColor="@color/red"
        android:layout_alignLeft="@+id/textView2" />

    <ToggleButton
        android:id="@+id/D01"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:textOn="Đã Bật"
        android:textOff="Đã Tắt"
        android:text="ToggleButton"
        android:layout_alignParentLeft="true" />

    <ToggleButton
        android:id="@+id/D02"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:textOn="Đã Bật"
        android:textOff="Đã Tắt"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true" />

    <ToggleButton
        android:id="@+id/D03"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:textOn="Đã Bật"
        android:textOff="Đã Tắt"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />

    <ToggleButton
        android:id="@+id/D04"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:textOn="Đã Bật"
        android:textOff="Đã Tắt"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true" />


</RelativeLayout>